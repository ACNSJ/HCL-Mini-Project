    <button type="button"id="op3">
        <% if (locals.op3 !=null) { %>
            <%=op3  %>
            <% } else { %>
                op3
            <% } %>
    </button><br>
    <button type="button" id="op4">
        <% if (locals.op4 !=null) { %>
